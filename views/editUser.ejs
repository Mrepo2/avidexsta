<div class="app-content">
<div class="side-app">

  <div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-gray">Editing:  <%=user.fullname%> </h1>
    <div class="btn-toolbar mb-2 mb-md 0">
    </div>
  </div>
  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item active"> <%=user.fullname%> </li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <!-- <b>Last Updated:</b> -->
        <b>UserId:</b> <%=user._id%>
      </div>
    </div>
  
  </div>
  
  
  <form action="/editUser/<%=user._id%>?_method=PUT" method="POST">
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="fullname">Full Name</label>
        <input type="text" class="form-control" id="fullname" name="fullname" value=" <%=user.fullname%> " placeholder="Full Name" readonly required>
      </div>

      
      <div class="col">
        <label for="text">Country</label>
        <input type="text" class="form-control" id="country" name="country" value=" <%=user.country%> " placeholder="country" readonly required>
      </div>
      <div class="row form-group mb-4"> 
      <div class="col">
        <label for="balance">Deposit</label>
        <input type="text" class="form-control" id="balance" name="balance" value=" <%=user.balance%> " placeholder="balance" required>
      </div>

    </div>

    </div>

    <div class="row form-group mb-4">
      <div class="col">
        <label for="withdrawBalance">Widthdraw </label>
        <input type="text" class="form-control" id="widthdrawBalance" name="widthdrawBalance" value=" <%=user.widthdrawBalance%> " placeholder="balance" required>
      </div>

      <div class="col">
        <label for="bonus">Bonus </label>
        <input type="text" class="form-control" id="bonus" name="bonus" value=" <%=user.bonus%>" placeholder="balance" required>
      </div>

    </div>
      
    <div class="row form-group mb-4">
      <div class="col">
        <label for="tel">Telephone</label>
        <input type="tel" class="form-control" id="tel" name="tel" value=" <%=user.tel%> " placeholder="Telephone" readonly required>
      </div>
  
      <div class="col">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%=user.email%>" placeholder="Email" readonly required>
      </div>
    </div>

    <div class="row form-group mb-4">

    <div class="col">
      <label for="available">Available Balance </label>
      <input type="text" class="form-control" id="available" name="available" value=" <%=user.available%> " placeholder="Available balance" required>
    </div>

  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="profit">Profit</label>
      <input type="text" class="form-control" id="profit" name="profit" value=" <%=user.profit%> " placeholder="Profile" required>
    </div>

  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="totalDeposit">Total Deposit</label>
      <input type="text" class="form-control" id="totalDeposit" name="totalDeposit" value=" <%=user.totalDeposit%> " placeholder="Total Deposit" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="totalWidthdraw">Total Widthdraw</label>
      <input type="text" class="form-control" id="totalWidthdraw" name="totalWidthdraw" value="<%=user.totalWidthdraw%>" placeholder="Total widthdraw" required>
    </div>

    <div class="col">
      <label for="account">Account signal</label>
      <input type="text" class="form-control" id="signal" name="signal" value=" <%=user.signal%> " placeholder="Account signal" required>
    </div>
  </div>
  
  
    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">Update User</button>
  
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete User</button>
  
    </div>
  
  </form>

</div>
</div>
</div>
</div> 

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a user record.</div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the User record of <b class="fw-bold"> <%=user.fullname%> </b><br/>
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/deleteUser/<%=user._id%> ?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-primary">Yes, Remove User</button>
        </form>
      </div>
    </div>
  </div>
</div>


